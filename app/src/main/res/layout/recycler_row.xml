<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="63dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">


            <TextView
                android:id="@+id/ticker_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIKR"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.02"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.258" />

            <TextView
                android:id="@+id/predicted_move_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##%"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/ticker_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.302"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ticker_txt"
                app:layout_constraintVertical_bias="0.384" />

            <TextView
                android:id="@+id/zscore_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/predicted_move_txt"
                app:layout_constraintStart_toStartOf="@+id/predicted_move_txt" />

            <TextView
                android:id="@+id/date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="mm/dd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ticker_txt"
                app:layout_constraintEnd_toStartOf="@+id/zscore_txt"
                app:layout_constraintHorizontal_bias="0.197"
                app:layout_constraintStart_toStartOf="@+id/ticker_txt"
                app:layout_constraintTop_toBottomOf="@+id/ticker_txt"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/since_last_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#.##%"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.535"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.52" />

            <TextView
                android:id="@+id/esp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#.##%"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.786"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.534" />

            <TextView
                android:id="@+id/momentum_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/vgm_txt"
                app:layout_constraintStart_toStartOf="@+id/vgm_txt"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/vgm_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="A"
                android:textColor="@color/black"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/since_last_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Since Last"
                app:layout_constraintEnd_toEndOf="@+id/since_last_txt"
                app:layout_constraintStart_toStartOf="@+id/since_last_txt"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/esp_label"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:text="ESP"
                app:layout_constraintEnd_toEndOf="@+id/esp_txt"
                app:layout_constraintStart_toStartOf="@+id/esp_txt"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>