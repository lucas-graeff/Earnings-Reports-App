<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="63dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/date_txt"
            app:layout_constraintEnd_toStartOf="@+id/surprise_txt"
            app:layout_constraintStart_toStartOf="@+id/surprise_txt"
            app:layout_constraintTop_toBottomOf="@+id/date_txt">


            <TextView
                android:id="@+id/ticker_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIKR"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.014"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/predicted_move_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##%"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/ticker_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.387"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ticker_txt"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/zscore_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="#"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/predicted_move_txt"
                app:layout_constraintHorizontal_bias="0.454"
                app:layout_constraintStart_toStartOf="@+id/predicted_move_txt"
                app:layout_constraintTop_toBottomOf="@+id/predicted_move_txt" />

            <TextView
                android:id="@+id/date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="mm/dd"
                app:layout_constraintEnd_toEndOf="@+id/ticker_txt"
                app:layout_constraintEnd_toStartOf="@+id/zscore_txt"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/ticker_txt"
                app:layout_constraintTop_toBottomOf="@+id/ticker_txt" />

            <TextView
                android:id="@+id/esp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="#.##%"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.865"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/esp_label" />

            <TextView
                android:id="@+id/esp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ESP"
                app:layout_constraintEnd_toEndOf="@+id/esp_txt"
                app:layout_constraintHorizontal_bias="0.522"
                app:layout_constraintStart_toStartOf="@+id/esp_txt"
                app:layout_constraintTop_toTopOf="@+id/since_last_label" />

            <TextView
                android:id="@+id/since_last_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Since Last"
                app:layout_constraintEnd_toEndOf="@+id/since_last_txt"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/since_last_txt"
                tools:layout_editor_absoluteY="2dp" />

            <TextView
                android:id="@+id/surprise_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Surprise"
                app:layout_constraintBottom_toBottomOf="@+id/change_label"
                app:layout_constraintEnd_toEndOf="@+id/surprise_txt"
                app:layout_constraintStart_toStartOf="@+id/surprise_txt"
                app:layout_constraintTop_toBottomOf="@+id/since_last_txt"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/since_last_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="#.##%"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/esp_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.605"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/esp_txt"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/surprise_txt"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="183dp"
                android:text="#.##%"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/since_last_txt"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/change_txt" />

            <TextView
                android:id="@+id/change_txt"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="96dp"
                android:text="#.##%"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/esp_txt"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/esp_txt"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/change_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Change"
                app:layout_constraintBottom_toTopOf="@+id/change_txt"
                app:layout_constraintEnd_toEndOf="@+id/change_txt"
                app:layout_constraintStart_toStartOf="@+id/change_txt"
                app:layout_constraintTop_toBottomOf="@+id/esp_txt"
                app:layout_constraintVertical_bias="0.538" />

            <TextView
                android:id="@+id/momentum_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="A"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/vgm_txt"
                app:layout_constraintStart_toStartOf="@+id/vgm_txt"
                app:layout_constraintTop_toBottomOf="@+id/vgm_txt" />

            <TextView
                android:id="@+id/vgm_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="A"
                android:textColor="@color/black"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.08" />

            <ImageView
                android:id="@+id/time_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="72dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ticker_txt"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_baseline_wb_sunny_24" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>